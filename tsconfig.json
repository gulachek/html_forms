{
	"include": ["src/*.ts"],
	"compilerOptions": {
		"target": "es6",
		"module": "Node16",
		"moduleResolution": "Node16",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "types",
		"sourceMap": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"forceConsistentCasingInFileNames": true
	}
}
